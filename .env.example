# Vuen AI Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# Supabase Configuration
# ===========================================

# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ===========================================
# Optional: Analytics & Tracking
# ===========================================

# Google Analytics 4 Measurement ID (optional)
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ===========================================
# Optional: Feature Flags
# ===========================================

# Enable/disable certain features
# VITE_ENABLE_SPANISH=true
# VITE_ENABLE_BLOG=false

# ===========================================
# Build Configuration
# ===========================================

# Base URL for the site (used in some build configs)
# VITE_SITE_URL=https://vuen.ai
